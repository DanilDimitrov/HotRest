<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#bf5af2"
                android:centerColor="#ff2d55"
                android:endColor="#ff9f0a" />
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#2c2c2c" />
            <corners android:radius="12dp"/>

        </shape>
    </item>

</layer-list>